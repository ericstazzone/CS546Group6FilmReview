<div class="container main-container">
    <div class="row raise">
        <div class="col-12">
            <h1><a class="text-reset text-decoration-none" href="home">Film Reviews</a></h1>
        </div>
    </div>
    <div class="row raise">
        <div class="col-12">
            <div id="settings" class="container login-container show-border">
                <h2>Settings</h2>
                <form id="settings-form" class="needs-validation" method="POST" action="/signup" novalidate>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 align-self-start form-group signup-group">
                        <label for="first-name">First Name</label>
                        <input id="first-name" class="form-control" type="text" name="firstName" placeholder="First Name" required />
                        <div class="invalid-feedback">Please enter your first name.</div>
                    </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 align-self-start form-group signup-group">
                        <label for="last-name">Last Name</label>
                        <input id="last-name" class="form-control" type="text" name="lastName" placeholder="Last Name" required />
                        <div class="invalid-feedback">Please enter your last name.</div>
                    </div>
                </div>
                <div class="form-group signup-group">
                    <label for="email">Email</label>
                    <input id="email" class="form-control" type="text" name="email" placeholder="Email" required />
                    <div class="invalid-feedback">Please enter your email.</div>
                </div>
                <div class="form-group signup-group">
                    <label for="username">Username</label>
                    <input id="signup-username" class="form-control" type="text" name="username" placeholder="Username" required />
                    <div class="invalid-feedback">Please provide a username.</div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 align-self-start form-group signup-group">
                        <label for="password">Password</label>
                        <input id="signup-password" class="form-control" type="password" name="password" placeholder="Password" required />
                        <div class="invalid-feedback">Please provide a password.</div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 align-self-start form-group signup-group">
                        <label for="password">Confirm Password</label>
                        <input id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Password" required disabled />
                        <div class="invalid-feedback">Please provide a password.</div>
                    </div>
                </div>
                <button id="settings-button" class="btn btn-primary" {{!--form="settings-form" type="submit"--}}>Update</button>
                <a class="btn btn-secondary add-to-left" href="home">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>