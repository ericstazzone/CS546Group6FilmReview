<div class="container main-container raise">
    <div class="row">
        <div class="col-12">
            <h1>Film Reviews</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div id="login" class="container login-container show-border">
                <h2>Sign In</h2>
                <!-- TODO: Set action attribute for login form -->
                <form id="login-form" class="needs-validation" method="POST" action="/login" novalidate>
                <div class="form-group login-group">
                    <label for="username">Username</label>
                    <input id="login-username" class="form-control" type="text" name="username" placeholder="Username" required />
                    <div class="invalid-feedback login-error">Please provide a username.</div>
                </div>
                <div class="form-group login-group">
                    <label for="password">Password</label>
                    <input id="login-password" class="form-control" type="password" name="password" placeholder="Password" required />
                    <div class="invalid-feedback login-error">Please provide a password.</div>
                </div>
                <button id="login-button" class="btn btn-primary" form="login-form" type="submit">Sign In</button>
                <span class="align-middle add-to-left">Not a member? <a id="signup-link" class="font-weight-bold" href="./signup.html">Sign up!</a></span>
                </form>
            </div>
            <div id="signup" class="container login-container show-border" hidden>
                <h2>Sign Up</h2>
                <!-- TODO: Set action attribute for login form -->
                <form id="signup-form" class="needs-validation" method="POST" action="/signup" novalidate>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 align-self-start form-group signup-group">
                        <label for="first-name">First Name</label>
                        <input id="first-name" class="form-control" type="text" name="firstName" placeholder="First Name" required />
                        <div class="invalid-feedback">Please enter your first name.</div>
                    </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 align-self-start form-group signup-group">
                        <label for="last-name">Last Name</label>
                        <input id="last-name" class="form-control" type="text" name="lastName" placeholder="Last Name" required />
                        <div class="invalid-feedback">Please enter your last name.</div>
                    </div>
                </div>
                <div class="form-group signup-group">
                    <label for="email">Email</label>
                    <input id="email" class="form-control" type="text" name="email" placeholder="Email" required />
                    <div class="invalid-feedback">Please enter your email.</div>
                </div>
                <div class="form-group signup-group">
                    <label for="username">Username</label>
                    <input id="signup-username" class="form-control" type="text" name="username" placeholder="Username" required />
                    <div class="invalid-feedback">Please provide a username.</div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 align-self-start form-group signup-group">
                        <label for="password">Password</label>
                        <input id="signup-password" class="form-control" type="password" name="password" placeholder="Password" required />
                        <div class="invalid-feedback">Please provide a password.</div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 align-self-start form-group signup-group">
                        <label for="password">Confirm Password</label>
                        <input id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Password" required />
                        <div class="invalid-feedback">Please provide a password.</div>
                    </div>
                </div>
                <button id="login-button" class="btn btn-primary" form="signup-form" type="submit">Sign Up</button>
                <!-- TODO: Set link destination for creating an account -->
                <span class="align-middle add-to-left">Have an account? <a id="login-link" class="font-weight-bold" href="./login.html">Sign in!</a></span>
                </form>
            </div>
        </div>
    </div>
</div>