<div class="container main-container">
    <div class="row {{#unless noRaise}}raise{{/unless}}">
        <div class="col-12">
            <h1><a class="text-reset text-decoration-none" href="home">Film Reviews</a></h1>
        </div>
    </div>
    <div class="row {{#unless noRaise}}raise{{/unless}}">
        <div class="col-12">
            <div id="login" class="container login-container show-border">
                <h2>Sign In</h2>
                {{#if success}}
                <div id="login-alert" class="alert alert-success add-to-top-greater" role="alert">Your account has been created!</div>
                {{else}}
                <div id="login-alert" class="alert alert-danger add-to-top-greater" role="alert" hidden>Either the username or password is invalid.</div>
                {{/if}}
                <form id="login-form" class="needs-validation" method="POST" action="/login" novalidate>
                    <div class="form-group login-group">
                        <label for="username">Username</label>
                        <input id="login-username" class="form-control" type="text" name="username" placeholder="Username" required />
                        <div class="invalid-feedback login-error">Please provide a username.</div>
                    </div>
                    <div class="form-group login-group">
                        <label for="password">Password</label>
                        <input id="login-password" class="form-control" type="password" name="password" placeholder="Password" required />
                        <div class="invalid-feedback login-error">Please provide a password.</div>
                    </div>
                    <button id="login-button" class="btn btn-primary" form="login-form" type="submit">Sign In</button>
                    <span class="align-middle add-to-left">Not a member? <a id="signup-link" class="font-weight-bold" href="signup">Sign up!</a></span>
                </form>
            </div>
        </div>
    </div>
</div>